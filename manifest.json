{
    "manifest_version": 3,
    "name": "Web Highlighter",
    "description": "Extension that allow you to highlight texts within a web page",
    "version": "1.0",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {},
    "icons": {
        "16": "icons/highlighter16.png",
        "48": "icons/highlighter48.png",
        "128": "icons/highlighter128.png"
    }
}